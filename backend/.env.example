# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/dbname
# For Local MongoDB: mongodb://localhost:27017/fullstack-auth
MONGODB_URI=mongodb://localhost:27017/fullstack-auth

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Email Configuration (for verification and password reset)
# Using Gmail SMTP as example
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Email Templates
EMAIL_FROM=noreply@yourapp.com
EMAIL_FROM_NAME=Your App Name

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:5173

# Security
BCRYPT_ROUNDS=12
PASSWORD_RESET_EXPIRES=15m
EMAIL_VERIFICATION_EXPIRES=24h

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100